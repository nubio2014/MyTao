<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tl="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              tools:context="com.mlzq.mytao.fragment.SearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        tl:tl_textsize="16sp"
        tl:tl_indicator_height="2dp"
        tl:tl_tab_padding="10dp"
        tl:tl_textSelectColor="@color/red_text"
        tl:tl_textUnselectColor="@color/fontcolor6"
        tl:tl_indicator_width="15dp"
        tl:tl_indicator_color="@color/red_text"
        tl:tl_tab_space_equal="true"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_repair"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

</LinearLayout>
